{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
<article class="{{post_class}}">
    <header class="post-header">
        <h1 class="post-title"><a href="{{url}}">{{{title}}}</a></h1>
    </header>
    
    <section class="post-excerpt">
        <p>{{excerpt words="55"}}&hellip; <a class="read-more" href="{{url}}">&raquo;</a></p>
    </section>
    <footer class="post-meta">
        <section>On <time class="post-date" datetime="{{date format='DD-MM-YYYY'}}">{{date format="MMMM D, YYYY"}}</time> {{tags prefix=" in "}}</section>
    </footer>
</article>
{{/foreach}}

