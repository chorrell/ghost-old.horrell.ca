{{!< default}}

{{#post}}

<article class="{{post_class}}">
    
    <header class="post-header">
        <h1 class="post-title"><a href="{{url}}" rel="bookmark">{{{title}}}</a></h1>
    </header>

    <section class="post-content">
        {{content}}
    </section>

    <footer class="post-footer">
        <section class="post-meta"><time datetime="{{date format='YYYY-MM-DD'}}" pubdate>{{date format="MMM D, YYYY"}}</time> {{tags prefix="on "}}</section>
    </footer>
</article>

{{/post}}
