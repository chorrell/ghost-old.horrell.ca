{{!< default}}

{{#post}}

<main class="content" role="main">
    <article class="{{post_class}}">
    
        <header class="post-header">
            <h1 class="post-title"><a href="{{url}}" rel="bookmark">{{{title}}}</a></h1>
        </header>

        <section class="post-content">
            {{content}}
        </section>

        <footer class="post-footer">
            <section>On <time class="post-date" datetime="{{date format='DD-MM-YYYY'}}">{{date format="MMMM D, YYYY"}}</time> {{tags prefix=" in "}}</section>
        </footer>
    </article>
</main>

<aside class="read-next">
    
    <p class="next">{{#next_post}}<a href="{{url}}">&#9666;  {{title}}</a>{{/next_post}}</p>
    <p class="prev">{{#prev_post}}<a href="{{url}}">{{title}} &#9656;</a> {{/prev_post}}</p>
</aside>

{{/post}}
