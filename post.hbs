{{!< default}}

{{#post}}

<article class="{{post_class}}">
    
    <header class="post-header">
        <h1 class="post-title"><a href="{{url}}" rel="bookmark">{{{title}}}</a></h1>
    </header>

    <section class="post-content">
        {{content}}
    </section>

    <footer class="post-footer">
        <section>On <time class="post-date" datetime="{{date format='DD-MM-YYYY'}}">{{date format="MMMM D, YYYY"}}</time> {{tags prefix=" in "}}</section>
    </footer>
</article>

{{/post}}
