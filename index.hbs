{{!< default}}

{{! Previous/next page links - don't display on first page }}

{{#if pagination.prev}}
  {{pagination}}
{{else}}
{{/if}}

{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
<article class="{{post_class}}">
    <header class="post-header">
        <h1 class="post-title"><a href="{{url}}">{{{title}}}</a></h1>
        <span class="post-meta"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time> {{tags prefix="in "}}</span>
    </header>
    
    <section class="post-excerpt">
        <p>{{excerpt words="55"}}&hellip; <a class="read-more" href="{{url}}">&raquo;</a></p>
    </section>
</article>
{{/foreach}}

{{! Previous/next page links - displayed on every page }}
{{pagination}}